<?xml version="1.0" encoding="UTF-8"?>

<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>vavi</groupId>
  <artifactId>vavi-awt</artifactId>
  <name>Vavi AWT Support API</name>
  <organization>
    <name></name>
  </organization>
  <version>1.0.5</version>
  <url>https://github.com/umjammer/vavi-awt</url>
  <description>1.0.5

    glass pane for rubber band
    update swing binding

1.0.4

    maintenace version

1.0.3

    easy binding
        text field

1.0.2

    fix native2ascii

1.0.1

    add editor support
    easy binding

TODO

    separate compiler version in maven
    save history</description>
  <distributionManagement>
    <repository>
      <id>internal.repo</id>
      <name>Temporary Staging Repository</name>
      <url>file://${project.build.directory}/mvn-repo</url>
    </repository>
  </distributionManagement>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <executions>
          <execution>
            <id>8</id>
            <configuration>
              <source>1.8</source>
              <target>1.8</target>
              <excludes>
                <exclude>vavi/awt/AppletFrame.java</exclude>
              </excludes>
            </configuration>
          </execution>
          <execution>
            <id>1.3</id>
            <configuration>
              <source>1.1</source>
              <target>1.1</target>
              <includes>
                <include>vavi/awt/AppletFrame.java</include>
              </includes>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>native2ascii-maven-plugin</artifactId>
        <version>2.0.1</version>
        <executions>
          <execution>
            <goals>
              <goal>resources</goal>
            </goals>
            <configuration>
              <includes>
                <include>**/*_ja.properties</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>com.github.umjammer</groupId>
      <artifactId>vavi-commons-sandbox</artifactId>
      <version>0.3.3</version>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.3.0</version>
        <type>jar</type>
        <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>net.java.linoleum</groupId>
      <artifactId>jlfgr</artifactId>
      <version>1_0</version>
      <scope>runtime</scope>
    </dependency>
<!--
    <dependency>
      <groupId>com.github.umjammer</groupId>
      <artifactId>vavi-apps-editablepanel</artifactId>
      <version>3.0.1</version>
      <scope>test</scope>
    </dependency>
-->
  </dependencies>
</project>
